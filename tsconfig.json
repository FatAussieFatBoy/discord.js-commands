{
    "extends": "@sapphire/ts-config",

    "compilerOptions": {
        "lib": [
            "ES6",
            "ESNext"
        ],
        "target": "ES2019",
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ]
    },
    "exclude": [ "node_modules" ]
}